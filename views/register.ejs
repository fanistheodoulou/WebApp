<% include partials/header %>

<div class="container">
    <form action="/register" method="post" class="form-horizontal">
        <h1 style="background-color:rgb(92, 184, 92); padding:20px; color:white">Sign up</h1>
        <div class="form-group">
            <label for="userName" class="col-sm-3 control-label">Username</label>
            <div class="col-sm-9">
                <input type="text" name="userName" id="userName" placeholder="Username" class="form-control" required value=<%=usernameVal%>>
            </div>
            <% if (unErMsg) { %>
            <p class="alert-danger" id="userNameErrorMsg">You cannot use this Username</p>
            <% } %>
        </div>
        <div class="form-group">
            <label for="firstName" class="col-sm-3 control-label">First Name</label>
            <div class="col-sm-9">
                <input type="text" name="firstName" id="firstName" placeholder="First Name" class="form-control" required value=<%=firstnameVal%>>
            </div>
        </div>
        <div class="form-group">
            <label for="lastName" class="col-sm-3 control-label">Last Name</label>
            <div class="col-sm-9">
                <input type="text" name="lastName" id="lastName" placeholder="Last Name" class="form-control" required value=<%=lastnameVal%>>
            </div>
        </div>
        <div class="form-group">
            <label for="email" class="col-sm-3 control-label">Email </label>
            <div class="col-sm-9">
                <input type="email" name="email" id="email" placeholder="Email" class="form-control" name= "email" required value=<%=emailVal%>>
            </div>
            <% if (emErMsg) { %>
            <p class="alert-danger" id="emailErrorMsg">There is already an account with that email</p>
            <% } %>
        </div>
        <div class="form-group">
            <label for="password" class="col-sm-3 control-label">Password</label>
            <div class="col-sm-9">
                <input type="password" name="password" id="password" placeholder="Password" class="form-control" required>
            </div>
            <% if (passErMsg) { %>
            <p class="alert-danger" id="passwordErrorMsg">You cannot use this password</p>
            <% } %>
        </div>
        <div class="form-group">
            <label for="passwordComfirm" class="col-sm-3 control-label">Password</label>
            <div class="col-sm-9">
                <input type="password" name="passwordComfirm" id="passwordComfirm" placeholder="Comfirm Password" class="form-control" required>
            </div>
            <% if (cpErMsg) { %>
            <p class="alert-danger" id="passwordComfirmErrorMsg">Passwords must match</p>
            <% } %>
        </div>
        <div class="form-group">
            <label for="birthDate" class="col-sm-3 control-label">Date of Birth</label>
            <div class="col-sm-9">
                <input type="date" name="birthDate" id="birthDate" class="form-control" required value=<%=birthdateVal%>>
            </div>
        </div>
        <div class="form-group">
            <label for="phoneNumber" class="col-sm-3 control-label">Phone number </label>
            <div class="col-sm-9">
                <input type="text" name="phone" id="phone" placeholder="Phone number" class="form-control" required value=<%=phoneVal%>>
            </div>
            <% if (phErMsg) { %>
            <p class="alert-danger" id="phoneErrorMsg">Please enter a valid phone number(at least 5 digits)</p>
            <% } %>
        </div>
        <div class="form-group">
            <label for="AFM" class="col-sm-3 control-label">VAT Registration Number </label>
            <div class="col-sm-9">
                <input type="text" name="vat" id="vat" placeholder="Please write your VAT Registration Number" class="form-control" required value=<%=vatVal%>>
            </div>
        </div>
        <div class="form-group">
            <label for="location" class="col-sm-3 control-label">Location </label>
            <div class="col-sm-9">
                <input type="text" name="location" id="location" placeholder="Please write your current location" class="form-control" required value=<%=locationVal%>>
            </div>
        </div>
        <button type="submit" id="submit"  name="submit" class="btn btn-success btn-block"  value="Submit" >Register</button>
    </form> <!-- /form -->
</div> <!-- ./container -->


<% include partials/footer %>
