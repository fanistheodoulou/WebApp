<% include partials/header %>

<input type="hidden" id="categoriesField" name="categoriesField" value="<%=JSON.stringify(categories)%>">


<div class="container">
    <div class="row">
        <h1 style="text-align: center">Create a new Item!</h1>

        <div class="col-sm-3"></div>
        <div class="col-sm-6"">
            <form action="/management" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="name">
                </div>

                <div class="form-group">
                    <textarea  class="form-control" name="description" id="" cols="30" rows="5" placeholder="description"></textarea>
                </div>

                <div class="form-group">
                    <h4>Category</h4>
                    <select id="category" name="category" style="width: 200px">
                        <% categories.forEach(function(category){ %>
                        <% if(category.parent.name == ""){ %>
                        <option value="<%=category.name%>"><%=category.displayName%></option>
                        <% } %>
                        <% }); %>
                    </select>
                </div>

                <div class="form-group">
                    <select id="subcategory" name="subcategory" style="width: 200px">
                    </select>
                </div>

                <div class="form-group">
                    <select id="subcategory2" name="subcategory2" style="width: 200px">
                    </select>
                </div>

                <div class="form-group">
                    <label for="started">Starting Time:</label>
                    <span id="started">
                        <input type="date" name="startDate">
                        <input type="time" name="startTime">
                    </span>

                </div>

                <div class="form-group">
                    <label for="ends">Ending Time:</label>
                    <span id="ends">
                        <input type="date" name="endDate">
                        <input type="time" name="endTime">
                    </span>

                </div>

                <div class="form-group">
                    <div class="file-field input-field">
                        <div class="btn green">
                            <!--<span>Image</span>-->
                            <input name="myImage" type="file">
                        </div>
                        <!--<div class="file-path-wrapper" style="display: inline; float: left; width 100%; ">-->
                        <!--<input class="file-path validate" type="text">-->
                        <!--</div>-->
                    </div>
                </div>
                <button class="btn btl-lg btn-success btn-block">Submit!</button>
            </form>

            <a href="/management">Go back</a>
        </div>
    </div>
</div>


